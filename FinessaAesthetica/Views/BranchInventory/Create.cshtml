@model FinessaAesthetica.Models.BranchInventory

@{
    ViewBag.Title = "New Branch Inventory";
    ViewBag.CurrentEntity = "Branch Inventory";
    ViewBag.WebPageTitle = "New Branch Inventory";
}


<div class="navbar navbar-static-top toolbar">
    <ul class="nav navbar-nav pull-right">
        <li><a href="#" id="btnSaveTrigger" title="Create Branch Inventory"><span class="fa fa-save"></span>&nbsp;SAVE</a></li>
    </ul>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Dashboard/">Home</a></li>
        <li class="breadcrumb-item"><a href="~/BranchInventory/"> Branch Inventory List</a></li>
        <li class="breadcrumb-item actions">New Branch Inventory</li>
    </ol>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="ibox-content">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)


            <div class="row">
                <div class="col-md-12">
                    <div class="page-header">
                        <h4>Summary Details</h4>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.BranchId, "BranchId", new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.DropDownListFor(model => model.BranchId,
                                         (SelectList)ViewBag.BranchId,
                                         "Select branch . . .",
                                         new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.BranchId)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ProductId, "ProductId", new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.DropDownListFor(model => model.ProductId,
                                         (SelectList)ViewBag.ProductId,
                                         "Select product . . .",
                                         new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ProductId)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Quantity, new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control", @placeholder = "Quantity . . ." })
                                    @Html.ValidationMessageFor(model => model.Quantity)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.TotalAmount, new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(model => model.TotalAmount, new { @class = "form-control", @placeholder = "Total amount . . ." })
                                    @Html.ValidationMessageFor(model => model.TotalAmount)
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">

                            <div class="form-group">
                                @Html.LabelFor(model => model.StatusId, "StatusId", new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.DropDownListFor(model => model.StatusId,
                                         (SelectList)ViewBag.StatusId,
                                         "Select status . . .",
                                         new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.StatusId)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.MinimumThreshold, new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(model => model.MinimumThreshold, new { @class = "form-control", @placeholder = "Minimum threshold . . ." })
                                    @Html.ValidationMessageFor(model => model.MinimumThreshold)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.MaximumThreshold, new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(model => model.MaximumThreshold, new { @class = "form-control", @placeholder = "Maximum threshold . . ." })
                                    @Html.ValidationMessageFor(model => model.MaximumThreshold)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="page-header">
                        <h4>Record Information</h4>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.CreatedOn, new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    <input type="text" readonly="readonly" class="form-control" placeholder="@DateTime.Now.ToString("MMM dd, yyyy hh:mm tt")" />
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.LastModifiedOn, new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    <input type="text" readonly="readonly" class="form-control" placeholder="@DateTime.Now.ToString("MMM dd, yyyy hh:mm tt")" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label col-sm-3 label-left">Created By</label>
                                <div class="col-sm-9">
                                    <input type="text" readonly="readonly" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3 label-left">Last Modified By</label>
                                <div class="col-sm-9">
                                    <input type="text" readonly="readonly" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <input id="submitButton" type="submit" class="hidden" />
}

@section Scripts {
    <script>
        $('#btnSaveTrigger').click(function () {
            $('#submitButton').click();
            return false;
        });
    </script>
}
