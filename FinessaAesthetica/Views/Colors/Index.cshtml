@model IEnumerable<FinessaAesthetica.Models.Color>

@{
    ViewBag.Title = "Color";
    ViewBag.CurrentEntity = "Color";
    ViewBag.WebPageTitle = "Color List";
}



<div class="navbar navbar-static-top toolbar">
    <ul class="nav navbar-nav pull-right">
        <li><a href="~/Colors/Create" title="New Color"><span class="fa fa-plus"></span>&nbsp;NEW</a></li>
    </ul>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Dashboard/">Home</a></li>
        <li class="breadcrumb-item active">Color List</li>
    </ol>
</div>

<table class="table table-hover">
    <thead>
        <tr>          
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="cursor:pointer;" ondblclick="OpenRecord('/Colors/Edit/' + @item.ColorId);">
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Description)
                </td>
                <td class="text-right">
                    @Html.DeleteAction("Colors", "Delete", item.ColorId)
                </td>
            </tr>
        }
    </tbody>
</table>
