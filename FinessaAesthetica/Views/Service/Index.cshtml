@model IEnumerable<FinessaAesthetica.Models.Service>

@{
    ViewBag.Title = "Service";
    ViewBag.CurrentEntity = "Service";
    ViewBag.WebPageTitle = "Service List";
}


<div class="navbar navbar-static-top toolbar">
    <ul class="nav navbar-nav pull-right">
        <li><a href="~/Service/Create" title="New Service"><span class="fa fa-plus"></span>&nbsp;NEW</a></li>
    </ul>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Dashboard/">Home</a></li>
        <li class="breadcrumb-item active">Service List</li>
    </ol>
</div>

<table class="table table-hover">
    <thead>
        <tr>          
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status.Description)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr style="cursor:pointer;" ondblclick="OpenRecord('/Service/Edit/' + @item.ServiceId);">
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayForCurrency(item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Description)
                </td>
                <td class="text-right">
                    @Html.DeleteAction("Service", "Delete", item.ServiceId)
                </td>
            </tr>
        }
    </tbody>

</table>
