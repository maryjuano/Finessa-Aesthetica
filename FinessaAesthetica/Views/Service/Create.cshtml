@model FinessaAesthetica.Models.Service

@{
    ViewBag.Title = "New Service";
    ViewBag.CurrentEntity = "Service";
    ViewBag.WebPageTitle = "New Service";
}

<div class="navbar navbar-static-top toolbar">
    <ul class="nav navbar-nav pull-right">
        <li><a href="#" id="btnSaveTrigger" title="Create Service"><span class="fa fa-save"></span>&nbsp;SAVE</a></li>
    </ul>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Dashboard/">Home</a></li>
        <li class="breadcrumb-item"><a href="~/Service/">Service List</a></li>
        <li class="breadcrumb-item actions">New Service</li>
    </ol>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="ibox-content">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="row">
                <div class="col-md-12">
                    <div class="page-header">
                        <h4>Service Information</h4>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Code, new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(model => model.Code, new { @class = "form-control", @placeholder = "Service code . . ." })
                                    @Html.ValidationMessageFor(model => model.Code)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @placeholder = "Service description . . ." })
                                    @Html.ValidationMessageFor(model => model.Description)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Type, new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(model => model.Type, new { @class = "form-control", @placeholder = "Service type . . ." })
                                    @Html.ValidationMessageFor(model => model.Type)
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">


                            <div class="form-group">
                                @Html.LabelFor(model => model.Amount, new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", @placeholder = "Service amount . . ." })
                                    @Html.ValidationMessageFor(model => model.Amount)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.StatusId, "StatusId", new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.DropDownListFor(model => model.StatusId,
                                         (SelectList)ViewBag.StatusId,
                                         "Select status . . .",
                                         new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.StatusId)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @Html.Partial("~/Views/Shared/_RecordInformationCreate.cshtml")
        </div>
    </div>
    <input id="submitButton" type="submit" class="hidden" />
}
@section Scripts {

    <script>
        $('#btnSaveTrigger').click(function () {
            $('#submitButton').click();
            return false;
        });
    </script>
}
