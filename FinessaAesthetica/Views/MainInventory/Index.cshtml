@model IEnumerable<FinessaAesthetica.Models.MainInventory>

@section css {
    <link href="~/dist/css/inspinia/style.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "Inventory";
    ViewBag.CurrentEntity = "Inventory";
    ViewBag.WebPageTitle = "Inventory List";
}


<div class="navbar navbar-static-top toolbar">
    <ul class="nav navbar-nav pull-right">       
        <li><a href="/MainInventory/Transfer" title="TRANSFER"><i class="fa fa-truck"></i>&nbsp;TRANSFER</a></li>
        <li><a href="/PurchaseOrder/Receiving" title="RECEIVING"><span class="fa fa-download"></span>&nbsp;RECEIVING</a></li>
        <li><a href="#" title="OUTGOING"><i class="fa fa-upload"></i>&nbsp;OUTGOING</a></li>
        <li><a href="#" title="COSIGNEE"><i class="fa fa-mail-reply"></i>&nbsp;COSIGNEE</a></li>
       
    </ul>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Dashboard/">Home</a></li>
        <li class="breadcrumb-item active">Main Inventory List</li>
    </ol>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.ProductCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.UnitPrice)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
               Created By
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr style="cursor:pointer;" ondblclick="OpenRecord('/MainInventory/Edit/' + @item.MainInventoryId);">
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayForCurrency(item.Product.UnitPrice)
                </td>
                <td>
                    @Html.DisplayForCurrency(item.TotalAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Description)
                </td>
                <td class="text-right">
                    @Html.DeleteAction("MainInventory", "Delete", item.MainInventoryId)
                </td>
            </tr>
        }
    </tbody>

</table>


