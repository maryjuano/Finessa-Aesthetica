@model IEnumerable<FinessaAesthetica.Models.BranchInventory>

@{
    ViewBag.Title = "Branch Inventory";
    ViewBag.CurrentEntity = "Branch Inventory";
    ViewBag.WebPageTitle = "Branch Inventory List";
}


<div class="navbar navbar-static-top toolbar">
    <ul class="nav navbar-nav pull-right">
        <li><a href="~/BranchInventory/Create" title="New Branch Inventory"><span class="fa fa-plus"></span>&nbsp;NEW</a></li>
        <li><a href="#" title="New Branch Inventory"><span class="fa fa-download"></span>&nbsp;RECEIVING</a></li>
        <li><a href="#" title="New Branch Inventory"><i class="fa fa-upload"></i>&nbsp;OUTGOING</a></li>
        <li><a href="#" title="New Branch Inventory"><i class="fa fa-mail-reply"></i>&nbsp;COSIGNEE</a></li>
    </ul>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Dashboard/">Home</a></li>
        <li class="breadcrumb-item active">Branch Inventory List</li>
    </ol>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Branch.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.ProductCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinimumThreshold)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaximumThreshold)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr style="cursor:pointer;" ondblclick="OpenRecord('/BranchInventory/Edit/' + @item.BranchInventoryId);">
                <td>
                    @Html.DisplayFor(modelItem => item.Branch.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinimumThreshold)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaximumThreshold)
                </td>
                <td class="text-right">
                    @Html.DeleteAction("Supplier", "Delete", item.BranchInventoryId)
                </td>
            </tr>
        }
    </tbody>

</table>
