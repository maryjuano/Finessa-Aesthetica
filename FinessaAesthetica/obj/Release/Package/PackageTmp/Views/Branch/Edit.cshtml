@model FinessaAesthetica.Models.Branch

@{
    ViewBag.Title = "Edit Branch";
    ViewBag.CurrentEntity = "Branch";
    ViewBag.WebPageTitle = Model.Name;
}

<div class="navbar navbar-static-top toolbar">
    <ul class="nav navbar-nav pull-right">
        <li><a href="#" id="btnSaveTrigger" title="Save Branch"><span class="fa fa-save"></span>&nbsp;SAVE</a></li>
        <li><a href="#" id="btnDeleteTrigger" title="Delete Branch"><span class="fa fa-trash"></span>&nbsp;DELETE</a></li>
    </ul>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Dashboard/">Home</a></li>
        <li class="breadcrumb-item"><a href="~/Branch/">Branch List</a></li>
        <li class="breadcrumb-item actions">Edit Branch</li>
    </ol>
</div>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="ibox-content">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.BranchId)
            @Html.HiddenFor(model => model.CreatedById)
            @Html.HiddenFor(model => model.CreatedOn)

            <div class="row">
                <div class="col-sm-12">
                    <div class="page-header">
                        <h4>Branch Information</h4>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Branch name . . ." })
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Code, new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(model => model.Code, new { @class = "form-control", @placeholder = "Branch code . . ." })
                                    @Html.ValidationMessageFor(model => model.Code)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Address, new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = "Branch address . . ." })
                                    @Html.ValidationMessageFor(model => model.Address)
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Manager, new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(model => model.Manager, new { @class = "form-control", @placeholder = "Branch manager . . ." })
                                    @Html.ValidationMessageFor(model => model.Manager)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Telephone, new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(model => model.Telephone, new { @class = "form-control", @placeholder = "Branch telephone number . . ." })
                                    @Html.ValidationMessageFor(model => model.Telephone)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.StatusId, "StatusId", new { @class = "control-label col-sm-3 label-left" })
                                <div class="col-sm-9">
                                    @Html.DropDownListFor(model => model.StatusId,
                                         (SelectList)ViewBag.StatusId,
                                         new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.StatusId)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @Html.Partial("~/Views/Shared/_RecordInformationEdit.cshtml")
        </div>
    </div>

    <div hidden="hidden">
        @Html.ActionLink("Delete", "Delete", new { id = Model.BranchId }, new { @class = "DeleteTrigger" })
        <input id="submitButton" type="submit" />
    </div>
}

@section Scripts {

    <script>
        $('#btnSaveTrigger').click(function () {
            $('#submitButton').click();
            return false;
        });
        $('#btnDeleteTrigger').click(function () {
            $('.DeleteTrigger')[0].click();
            return false;
        });
    </script>
}
